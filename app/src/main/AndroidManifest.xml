<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hw9_final">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_theaters_white_18dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_theaters_white_18dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hw9_final">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ReviewDetail"
            android:label="@string/title_activity_review_detail"
            android:theme="@style/Theme.Hw9_final.NoActionBar" />
        <activity
            android:name=".Detail"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.Hw9_final.NoActionBar" />
    </application>

</manifest>